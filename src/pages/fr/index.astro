---
import Button from "@/components/starwind/button";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData, useTranslations } from "@/js/translationUtils";
import BaseLayout from "@/layouts/BaseLayout.astro";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
const t = useTranslations(currLocale);
---

<BaseLayout title={siteData.title} description={siteData.description}>
	<!-- basic hero section -->
	<section
		class="site-container flex min-h-[90lvh] flex-col items-center justify-center py-24 text-center md:py-32"
	>
		<h1 class="text-3xl font-medium md:text-5xl" data-aos="fade-up">
			{t("hero_text")}
		</h1>
		<p class="text-muted-foreground mx-auto mt-6 max-w-lg" data-aos="fade-up" data-aos-delay=".2">
			{siteData.title}
		</p>
		<Button
			href="https://cosmicthemes.com/all-access/"
			target="_blank"
			rel="noreferrer"
			variant="primary"
			class="mt-10"
			data-aos="fade-up"
			data-aos-delay=".4"
		>
			Get All Access
		</Button>
	</section>
</BaseLayout>
