---
import { Icon } from "astro-icon/components";

interface Props {
  number: number;
  title: string;
  description: string;
  icon: string;
}

const { number, title, description, icon, ...rest } = Astro.props;
---

<div class="group relative" {...rest}>
  <div class="flex items-start gap-8">
    <!-- Number & Icon Container -->
    <div class="relative">
      <div
        class="bg-primary group-hover:bg-primary-darker text-primary-foreground flex h-16 w-16 items-center justify-center rounded-full text-xl font-semibold transition-all duration-300"
      >
        {number}
      </div>
      <!-- Icon (Absolute Positioned) -->
      <div
        class="text-primary-accent bg-background dark:bg-base-900 absolute -right-1 -bottom-1 flex h-8 w-8 items-center justify-center rounded-full shadow-sm"
        aria-hidden="true"
      >
        <Icon name={icon} class="h-4 w-4" />
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 pt-3">
      <h3 class="group-hover:text-primary-accent mb-2 text-xl font-semibold transition-colors">
        {title}
      </h3>
      <p class="text-muted-foreground text-base">
        {description}
      </p>
    </div>
  </div>
</div>
