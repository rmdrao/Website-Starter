---
import { Image } from "astro:assets";

import type { TestimonialItem } from "@/config/types/configDataTypes";

interface Props {
	testimonial: TestimonialItem;
}

const { testimonial, ...rest } = Astro.props;
---

<div class="w-full p-3" {...rest}>
	<div class="rounded-5xl border-border border px-6 py-8">
		<div class="-m-3 mb-3 flex flex-wrap items-center">
			<div class="w-auto p-3">
				<div class="relative z-10 h-12 w-12 overflow-hidden rounded-full border">
					<Image
						src={testimonial.avatar}
						alt={`${testimonial.name}'s avatar`}
						class="h-full w-full object-cover"
						width={60}
					/>
				</div>
			</div>
			<div class="w-auto p-3">
				<h2 class="text-2xl">{testimonial.name}</h2>
				<p class="text-muted-foreground text-sm">{testimonial.title}</p>
			</div>
		</div>
		<blockquote class="mb-4">
			{testimonial.testimonial}
		</blockquote>
	</div>
</div>
