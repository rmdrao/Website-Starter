---
import doctorImage from "@images/card_bg-min.png"; // Use a doctor image for the left side
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const testimonialData = getTranslatedData("testimonialData", currLocale);

// First testimonial for the featured section
const featuredTestimonial = testimonialData[0];

// Use testimonials 2-4 for the right side (indices 1-3)
const sideTestimonials = testimonialData.slice(1, 4);
---

<section id="testimonials-side" class="bg-background my-12 rounded-b-2xl py-12 md:rounded-b-3xl">
  <div class="site-container">
    <div class="">
      <h2 class="h2 text-foreground mx-auto max-w-2xl text-center">
        Over <span class="text-primary-accent">100+</span> Reviews From Our Patients
      </h2>
    </div>
  </div>
  <div class="site-container mt-12 grid gap-8 lg:grid-cols-2 lg:gap-12">
    <!-- Left Side - Testimonial Image -->
    <div
      class="bg-primary/10 relative flex aspect-7/8 items-center justify-center rounded-2xl p-6 md:p-10"
      data-mos="fade-right"
    >
      <div class="bg-primary-600/90 absolute inset-0 h-full w-full overflow-hidden rounded-xl">
        <Image
          src={doctorImage}
          alt="Testimonial background"
          width={500}
          densities={[1.5, 2]}
          class="h-full w-full object-cover opacity-80 mix-blend-overlay brightness-75 grayscale filter"
        />
      </div>

      <div class="relative my-auto flex flex-col items-center justify-center text-white">
        <div>
          <!-- 5 star icons -->
          <div class="flex justify-between gap-1 text-yellow-400">
            <Icon class="size-10" name="tabler/star-filled" />
            <Icon class="size-10" name="tabler/star-filled" />
            <Icon class="size-10" name="tabler/star-filled" />
            <Icon class="size-10" name="tabler/star-filled" />
            <Icon class="size-10" name="tabler/star-filled" />
          </div>

          <blockquote class="mt-6 max-w-xs text-xl leading-loose text-white italic md:text-2xl">
            "{featuredTestimonial.testimonial}"
          </blockquote>

          <div class="mt-6">
            <p class="font-heading text-2xl font-semibold md:text-4xl">
              {featuredTestimonial.name}
            </p>
            <p class="mt-2 text-lg">{featuredTestimonial.title}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Stacked Feature Cards -->
    <div class="flex flex-col justify-between gap-8 md:py-10" data-mos="fade-left">
      {
        sideTestimonials.map((testimonial) => (
          <div class="">
            <div class="flex items-center gap-4 text-2xl">
              <Icon name="tabler/quote" class="text-primary size-20 rotate-180" />
              <div>
                <h3 class="text-foreground font-heading text-xl font-semibold">
                  {testimonial.name}
                </h3>
                <p class="text-sm font-medium">{testimonial.title}</p>
              </div>
            </div>
            <div class="px-4">
              <p class="text-muted-foreground mt-2 italic md:text-lg">
                "{testimonial.testimonial}"
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
