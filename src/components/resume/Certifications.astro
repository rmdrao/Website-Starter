---
import { type CollectionEntry } from "astro:content";

interface Props {
  certifications: CollectionEntry<"resume">["data"]["certifications"];
}

const { certifications } = Astro.props;
---

<div class="space-y-4">
  <h2 class="h3">Certifications</h2>
  <div class="space-y-4">
    {
      certifications.map((cert) => (
        <div class="dark:bg-base-900 hover:border-primary-accent/50 flex items-center justify-between rounded-lg border bg-white p-4 transition-all">
          <h3 class="font-medium">{cert.title}</h3>
          <span class="text-primary-accent">{cert.year}</span>
        </div>
      ))
    }
  </div>
</div>
