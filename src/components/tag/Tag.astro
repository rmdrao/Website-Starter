---
import { getLocaleFromUrl } from "@/js/localeUtils";
import { slugify, tagify } from "@/js/textUtils";
import { getLocalizedRoute } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);

interface Props {
	tag: string;
	class?: string;
}

const { tag, class: className } = Astro.props as Props;
---

<a
	href={getLocalizedRoute(currLocale, `/tags/${slugify(tag)}/`)}
	class={`inline-block text-sm text-muted-foreground hover:text-foreground hover:underline ${className}`}
>
	#{tagify(tag)}
</a>
