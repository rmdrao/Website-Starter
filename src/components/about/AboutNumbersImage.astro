---
import building from "@images/building-2-min.png";
import { Image } from "astro:assets";

import Badge from "@/components/badge/Badge.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getLocalizedRoute, getTranslatedData, useTranslations } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);

interface StatItem {
  value: string;
  label: string;
}

const stats: StatItem[] = [
  {
    value: "500+",
    label: "Happy Customers",
  },
  {
    value: "6",
    label: "Expert Doctors",
  },
  {
    value: "4.9/5",
    label: "Customer Reviews",
  },
];
---

<section class="py-16 md:py-24">
  <div class="site-container grid gap-8 md:grid-cols-2 md:gap-16">
    <div class="order-2 aspect-square overflow-hidden rounded-2xl md:order-1">
      <Image
        src={building}
        alt="Space Coast Medicine Building"
        width={1001}
        densities={[1.5, 2]}
        class="h-full w-full object-cover"
      />
    </div>

    <div class="order-1 md:order-2">
      <Badge class="whitespace-nowrap">About Us</Badge>
      <h2 class="h2 mt-4 mr-auto max-w-lg">To Improve Your Health</h2>

      <p class="mt-4 md:text-lg">
        At Space Coast Medicine, our doctors believe in treating the whole person, not just the
        symptoms. We prioritize holistic primary care and work with our patients to create
        personalized care plans. We empower our patients to take an active role in their health
        journey.
      </p>

      <div class="mt-10 flex flex-wrap gap-8">
        {
          stats.map((stat) => (
            <div class="space-y-1.5 pr-6">
              <p class="text-primary-accent font-heading text-4xl font-semibold md:text-5xl">
                {stat.value}
              </p>
              <p class="">{stat.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
