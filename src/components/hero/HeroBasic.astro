---
import Button from "@/components/button/Button.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getTranslatedData, useTranslations } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
const t = useTranslations(currLocale);
---

<section
	class="site-container flex min-h-[70lvh] flex-col items-center justify-center py-24 text-center md:py-32"
>
	<h1 class="text-3xl font-medium text-pretty md:text-5xl" data-aos="fade-up">
		{t("hero_text")}
	</h1>
	<p class="text-muted-foreground mx-auto mt-6 max-w-xl" data-aos="fade-up" data-aos-delay=".2">
		{siteData.title}
	</p>
	<Button
		href="https://cosmicthemes.com/all-access/"
		target="_blank"
		rel="noreferrer"
		variant="primary"
		class="mt-10"
		data-aos="fade-up"
		data-aos-delay=".4"
	>
		Get All Access
	</Button>
</section>
